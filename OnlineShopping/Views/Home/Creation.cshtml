@model OnlineShopping.Models.CreateProduct
@{
    ViewBag.Title = "Creation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create New Product</h2>
@using (Html.BeginForm("Creation", "Home",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
